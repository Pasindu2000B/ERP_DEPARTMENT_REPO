@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />



<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />

        <MudText Typo="Typo.h5" Class="px-4">EEC Coordinator</MudText>
       

      
        <MudSpacer />
        <MudButton StartIcon="@Icons.Material.Filled.Logout"
                   Color="Color.Inherit"> LogOut</MudButton>
     
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavLink Href="/Students_Requests" Icon="@Icons.Material.Filled.Mail" IconColor="Color.Inherit">Requests</MudNavLink>
        <MudNavLink Href="/Internships" Icon="@Icons.Material.Filled.Business" IconColor="Color.Inherit">Internships</MudNavLink>
        <MudNavLink Href="/UserProfile" Icon="@Icons.Material.Filled.Man" IconColor="Color.Inherit">UserProfile</MudNavLink>

    </MudDrawer>
    
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}