@page "/login"

<MudPaper Class="pa-4">
    <MudTabs>
        <MudTabPanel Text="Login">
            <MudForm>
                <MudTextField Label="Student Id" Variant="Variant.Outlined" FullWidth @bind-Value="@loginUsername" />
                 <MudTextField Label="Password" Variant="Variant.Outlined" FullWidth @bind-Value="@loginPassword" InputType="InputType.Password" />
                  <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4" OnClick="@Log">Forget Password</MudButton>

                 <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4" OnClick="@Log">Login</MudButton>
             </MudForm>
         </MudTabPanel>
         <MudTabPanel Text="Sign Up">
             <MudForm>
                 <MudTextField Label="Studnet Id " Variant="Variant.Outlined" FullWidth @bind-Value="@signupUsername" />
                 
                 <MudTextField Label="Password" Variant="Variant.Outlined" FullWidth @bind-Value="@signupPassword" InputType="InputType.Password" />
                 <MudTextField Label="Confirm Password" Variant="Variant.Outlined" FullWidth @bind-Value="@signupPassword" InputType="InputType.Password" />
                @page "/cv-upload"


    <MudContainer>
        <MudText Typo="Typo.h5" GutterBottom>Upload Your CV</MudText>
        <MudForm>
            <div class="file-upload-container">
                <InputFile OnChange="@OnInputFileChange" class="file-input" multiple />
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="upload-btn" OnClick="@UploadFiles">Upload</MudButton>
            </div>
        </MudForm>
        @if (fileNames.Any())
        {
            <MudText Typo="Typo.subtitle1" Class="mt-4">Uploaded Files:</MudText>
            <MudList Dense>
                @foreach (var name in fileNames)
                {
                    <MudListItem>@name</MudListItem>
                }
            </MudList>
        }
    </MudContainer>

<style>
    .file-upload-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 10px;
    }

    .file-input {
        flex-grow: 1;
    }

    .upload-btn {
        margin-top: 20px;
    }
</style>
                
                <MudCheckBox @bind-Checked="@acceptedTerms" Color="Color.Primary">I accept the <MudLink Href="your-terms-and-conditions-url">Terms and Conditions</MudLink></MudCheckBox>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mt-4" OnClick="@SignUp">Sign Up</MudButton>
             </MudForm>
         </MudTabPanel>
     </MudTabs>

 </MudPaper>

 @code {
    private string loginUsername;
    private string loginPassword;

    private string signupUsername;
    private string signupEmail;
    private string signupPassword;
    private bool acceptedTerms = false;

    private void Log()
    {
